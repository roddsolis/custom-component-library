{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "custom-library": {
      "projectType": "library",
      "root": "projects/custom-library",
      "sourceRoot": "projects/custom-library/src",
      "prefix": "kip",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/custom-library/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/custom-library/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/custom-library/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/custom-library/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/custom-library/.storybook",
            "browserTarget": "custom-library:build",
            "compodoc": false,
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/custom-library/.storybook",
            "browserTarget": "custom-library:build",
            "compodoc": false,
            "outputDir": "storybook-static"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
